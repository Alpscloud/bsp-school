.btn
	display inline-block
	padding em(24) em(50)
	font em(21) $Bold
	line-height 1
	text-align center
	color $text-color
	border 3px solid transparent
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $accent-color
	color $basic-white-color
	text-transform uppercase
	border-radius 50px
	&:hover
		background-color transparent
		border-color $accent-color
		color $text-color
	
	&-stroke
		background-color transparent
		border-color $accent-color
		color $text-color
		&:hover
			background-color $accent-color
			color $basic-white-color
			
	&-wide
		width 100%
		padding-left 10px
		padding-right 10px
		
	&-arrow
		display inline-block
		width 42px
		height 46px
		position absolute
		right 0
		top 50px
		svg
			svg()
			fill $accent-color
		&:hover
			svg
				fill $basic-black-color
		
	&-close
		display inline-block
		width 51px
		height 51px
		position absolute
		top 33px
		right 33px
		transform rotate(45deg)
		svg
			svg()
			fill $accent-color
		&:hover
			svg
				fill $basic-black-color

		
	
		

	&-hamburger
		display none
		flex none
		width 50px
		height 20px
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		pointer-events auto
		z-index 10
		span
			width 50px
			height 5px
			background-color $basic-black-color
			display block
			margin 4px auto
			transition all 0.3s ease-in-out	
		&.is-active
			span
				&:nth-child(1)
					transform translateY(5px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-13px) rotate(-45deg)
		